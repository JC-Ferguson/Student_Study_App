<h2>Edit <%= resource_name.to_s.humanize %></h2>
<% @subjects=Subject.all %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
 
    <div>
        <%= f.label :name %>
        <%= f.text_field :name, required: true %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description, required: true %>
    </div>
    <div>
        <%= f.label :image %>
        <%= f.file_field :image, accept: "image/png,image/gif,image/jpeg,image/jpg" %>
    </div>
    <div>
        <h3>Education Level</h3>
        <%= f.label :education_level, "Primary" %>
        <%= f.radio_button :education_level, "primary" %>
        <%= f.label :education_level, "Highschool" %>
        <%= f.radio_button :education_level, "highschool" %>
        <%= f.label :education_level, "Tertiary" %>
        <%= f.radio_button :education_level, "tertiary" %>
        <%= f.label :education_level, "Special Needs" %>
        <%= f.radio_button :education_level, "special_needs" %>
    </div>
    <div>
        <h3>Subjects</h3>
        <%= f.collection_check_boxes :subject_ids, @subjects, :id, :name %>
    </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
