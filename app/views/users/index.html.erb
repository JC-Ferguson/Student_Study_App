<main id="connect">
    <%= render "/nav_bar" %>
    <h1>SSC</h1>
    <h2>Connecting You</h2>
    <form action="<%= users_path %>" method="GET">
        <input type="search" name="search" />
    </form>
    <div class="user">
        <% @users.each do |user| %>
        <% if user.id==current_user.id then next end%>
                <div>
                <%= link_to(user_profile_path(user)) do %>
                    <figure>
                        <% if user.image.attached? %>
                            <%= image_tag user.image %>
                        <% elsif user.student? %>
                            <%= image_tag("student_default.png") %>
                        <% else  %>
                            <%= image_tag("tutor_default.jpg") %>
                        <% end %>
                    </figure>
                    <section>
                        <h3><%= user.name %></h3>
                        <% if user.student? %>
                            <h3>Student</h3>
                        <%else%>
                            <h3>Tutor<h3>
                        <% end %>   
                    <% end %>
                        <h3>Subjects:<% user.subjects.each do |i| %></h3>
                            <p><%= i[:name] %></p>    
                        <% end %>
                        <h3>
                            <%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
                                "data-sid" => current_user.id, "data-rip" => user.id %>
                        </h3>
                    </section>
                </div>      
        <% end %>
    </div>
</main>

