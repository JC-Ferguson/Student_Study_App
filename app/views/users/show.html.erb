<main id="profile">
  <%= render "/nav_bar" %>
  <div class="user_prof">
    <figure>
      <% if @user.image.attached? %>
        <%= image_tag @user.image %>
      <% elsif @user.student? %>
        <%= image_tag("student_default.png") %>
      <% else  %>
        <%= image_tag("tutor_default.jpg") %>
      <% end %>
    </figure>
    <div class="name_titles">
      <h1><%= @user.name %></h1>
      <%if current_user.id==@user.id%>
      <h5><%= link_to "Edit", new_user_path %></h5>
     
      <%end%>
    </div>
  </div>
  <div class="user_info">
    <h3><%= @user.description %></h3>
    <%if @user.special_needs?%>
        <h3>Education Level: Special Needs</h3>
    <%else%>
        <h3>Education Level: <%= @user.education_level.capitalize  %></h3>
    <% end %>
    <% if @user.student? %>
        <h3>School: <%= @user.student.school %></h3>
    <% end %>
    <h3>Subjects:<% @user.subjects.each do |i| %></h3>
        <p><%= i[:name] %></p>    
    <% end %>
    <% if @user.tutor? %>
        <h3>Price: <%= number_to_currency(@user.tutor.price / 100.0) %></h3>
    <% end %>
    <h3>Contact</h3>
    <h4>email: <%= @user.email %></h4>
  </div>
</main>