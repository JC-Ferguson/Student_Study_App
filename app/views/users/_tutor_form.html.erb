<%= form_with model: tutor, local: true do |form| %>
    <%= form.label :price, "$ Price" %>
    <%= form.number_field :price, min: 0 %>
    <%= form.collection_check_boxes :availability_ids, availabilities, :id, :day %>
    <%= form.label :availability_tutors_start_time, "Starting Availability" %>
    <%= form.number_field :availability_tutors_start_time, min: 0, max:23 %>
    <%= form.label :availability_tutors_end_time, "Ending Availability" %>
    <%= form.number_field :availability_tutors_end_time, min: 0, max:23 %>
    <%= form.submit %>
<% end %>